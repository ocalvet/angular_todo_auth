<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Angular Todo</title>
	<!-- inject:css -->
	<link rel="stylesheet" href="/styles/angular-material.css">
	<link rel="stylesheet" href="/styles/app.css">
	<!-- endinject -->
</head>
<body data-ng-app="todoApp" data-ng-controller="TodoAppCtrl as todoAppCtrl" data-ng-cloak="">
	<md-toolbar md-scroll-shrink ng-if="true">
    <div class="md-toolbar-tools">
      <h3 flex>
        <span>{{ todoAppCtrl.data.title }}</span>
      </h3>
			<md-button ng-show="todoAppCtrl.isAuthenticated" data-ng-click="todoAppCtrl.logout()">Logout</md-button>
			<md-button ng-hide="todoAppCtrl.isAuthenticated || todoAppCtrl.showRegistration" data-ng-click="todoAppCtrl.register()">Register</md-button>
			<md-button ng-show="!todoAppCtrl.isAuthenticated && todoAppCtrl.showRegistration" data-ng-click="todoAppCtrl.signin()">Sign In</md-button>
    </div>
  </md-toolbar>
  <md-content layout-padding flex>
		<%- body %>
	</md-content>
	
	<!-- inject:js -->
	<script src="/libs/angular.js"></script>
	<script src="/libs/angular-animate.js"></script>
	<script src="/libs/angular-aria.js"></script>
	<script src="/libs/angular-local-storage.js"></script>
	<script src="/libs/angular-material.js"></script>
	<script src="/libs/angular-ui-router.js"></script>
	<!-- endinject -->

	<!-- application:js -->
	<script src="/todo.js"></script>
	<!-- endinject -->
</body>
</html>